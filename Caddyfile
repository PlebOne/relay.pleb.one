# Caddyfile for relay.pleb.one
# Automatic HTTPS with Let's Encrypt

{$RELAY_DOMAIN:relay.pleb.one} {
    # WebSocket for Nostr relay (Match Upgrade header)
    @websocket {
        header Connection *Upgrade*
        header Upgrade websocket
    }
    handle @websocket {
        reverse_proxy relay:3001
    }

    # NIP-11 Relay Information Document
    @nip11 {
        header Accept application/nostr+json
    }
    handle @nip11 {
        reverse_proxy relay:3001
    }

    # Main application (Next.js)
    handle /api/* {
        reverse_proxy app:3000
    }
    
    handle /* {
        reverse_proxy app:3000
    }
    
    # Health check endpoint
    handle /health {
        reverse_proxy app:3000
    }
    
    # Security headers
    header {
        # HSTS
        Strict-Transport-Security "max-age=31536000; includeSubDomains; preload"
        
        # Content Security Policy
        Content-Security-Policy "default-src 'self'; script-src 'self' 'unsafe-inline' 'unsafe-eval'; style-src 'self' 'unsafe-inline'; img-src 'self' data: https:; font-src 'self' data:; connect-src 'self' ws: wss:; frame-ancestors 'none';"
        
        # Other security headers
        X-Content-Type-Options "nosniff"
        X-Frame-Options "DENY"
        X-XSS-Protection "1; mode=block"
        Referrer-Policy "strict-origin-when-cross-origin"
        
        # Remove server info
        -Server
    }
    
    # Enable compression
    encode gzip zstd
    
    # Logging
    log {
        output file /var/log/caddy/access.log
        format json
    }
    
    # Rate limiting for API endpoints (Requires custom Caddy build with rate-limit module)
    # rate_limit {
    #     zone api {
    #         key {remote_host}
    #         events 100
    #         window 1m
    #     }
    #     
    #     zone websocket {
    #         key {remote_host}
    #         events 10
    #         window 1m
    #     }
    # }
}

# Development configuration (if not using custom domain)
localhost:80 {
    reverse_proxy app:3000
    
    handle /ws {
        reverse_proxy relay:3001
    }
}

# Redirect www to non-www
www.{$RELAY_DOMAIN:relay.pleb.one} {
    redir https://{$RELAY_DOMAIN:relay.pleb.one}{uri} permanent
}